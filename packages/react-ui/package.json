{
	"name": "@zeropoll/react-ui",
	"version": "2.0.0",
	"description": "ZeroPoll React UI",
	"main": "dist/index.js",
	"private": false,
	"author": "anarkrypto <anarkrypto@gmail.com>",
	"license": "MIT",
	"files": [
		"dist"
	],
	"type": "module",
	"exports": {
		".": "./dist/index.js",
		"./styles.css": "./dist/styles.css"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"format": "prettier --write .",
		"lint": "eslint .",
		"predev": "cd ../../packages/react && pnpm predev && pnpm build",
		"build": "pnpm run build:css && tsc -p tsconfig.json && tsc-alias",
		"build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css"
	},
	"keywords": [],
	"dependencies": {
		"@hookform/resolvers": "^3.3.2",
		"@radix-ui/react-dialog": "^1.1.1",
		"@radix-ui/react-label": "^2.0.2",
		"@radix-ui/react-slot": "^1.0.2",
		"@zeropoll/core": "workspace:*",
		"@zeropoll/react": "workspace:*",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.0.0",
		"lucide-react": "^0.468.0",
		"react-hook-form": "^7.48.2",
		"tailwind-merge": "^2.0.0"
	},
	"devDependencies": {
		"@tailwindcss/typography": "^0.5.10",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"@zeropoll/eslint-config": "workspace:*",
		"@zeropoll/prettier-config": "workspace:*",
		"autoprefixer": "^10.0.1",
		"postcss": "^8",
		"tailwindcss": "^3.3.0",
		"tailwindcss-animate": "^1.0.7",
		"tsc-alias": "^1.8.10",
		"typescript": "5.4.5"
	},
	"peerDependencies": {
		"react": "^18",
		"react-dom": "^18"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/anarkrypto/zeropoll.git"
	}
}
